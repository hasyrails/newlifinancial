<header>

  <% if current_user %>
    <% if current_user.avatar %>
    <div class="header-user-icon">
      <%= image_tag current_user.avatar.url, size: '50x50' %>
    </div>
    <% end %>
  <% end %>

  <div class="app-name">
    NewLifinancial
  </div>

  <div class="header-links">
    <div class="user-register-link">ユーザー登録</div>
    <% if current_user %>
      <div class="user-login-link">ログアウト</div>
    <% else %>
      <div class="user-login-link">ログイン</div>
      <div class="user-guestlogin-link">ゲストログイン</div>
    <% end %>
  </div>

</header>
