<div class="container">
  <%= render 'shared/flash_message', class: "alert alert-success", style: 'margin-top:10%;'%>
  <%= current_user.name %>
  買いたい家具を選ぶ
  値段合計
  <% i = 1 %>
  <% @items.each do |item| %>
    <tr>
      <td>
        <button id="button" onclick="setlocalStorage()">保存</button>
      </td>
      <td><%= i %></td><% i += 1 %>
      <td><img src="<%= item['smallImageUrls'][0] %>"></td>
      <td><a href="<%= item['itemUrl'] %>" target="_blank"><%= item['itemName'] %></a></td>
      <td><%= item['itemPrice'] %>円</td>
    </tr>
  <% end %>
</div>
